@model IEnumerable<MovieCatalog.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movie catalog</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Title", "Index", new { orderValue = ViewBag.OrderTitle })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.ActionLink("Genre", "Index", new { orderValue = ViewBag.OrderGenre })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating.RatingValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @if (User.Identity.IsAuthenticated)
        {
            <th></th>
        }
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.GenreValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating.RatingValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrlDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        @if (User.Identity.IsAuthenticated)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
    </tr>
}

</table>
